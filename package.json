{
  "name": "mysite",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint:turbo": "turbo run lint",
    "lint:depcruise": "depcruise --config .dependency-cruiser.js apps packages",
    "lint:biome": "biome check .",
    "lint": "run-s -c lint:*",
    "format": "run-p -c format:*",
    "format:biome-format": "biome format . --write",
    "format:biome-check": "biome check . --apply",
    "scaffold": "scaffdog generate"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@project/configs": "workspace:^*",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.42.0",
    "npm-run-all": "^4.1.5",
    "scaffdog": "^3.0.0",
    "turbo": "^1.10.1"
  },
  "packageManager": "pnpm@8.12.1"
}
