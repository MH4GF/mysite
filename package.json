{
  "name": "mysite",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint:turbo": "turbo run lint",
    "lint:depcruise": "depcruise --config .dependency-cruiser.js apps packages",
    "lint:biome": "biome check .",
    "lint": "run-s -c lint:*",
    "fmt:biome-check": "biome check . --write --unsafe",
    "fmt": "run-p -c format:*",
    "scaffold": "scaffdog generate"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@project/configs": "workspace:^*",
    "dependency-cruiser": "16.3.4",
    "eslint": "8.57.0",
    "lost-pixel": "3.17.0",
    "npm-run-all2": "6.2.0",
    "scaffdog": "4.0.0",
    "turbo": "2.0.6"
  },
  "packageManager": "pnpm@8.15.8"
}
