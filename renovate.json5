{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app", // https://docs.renovatebot.com/presets-config/#configjs-app
    "docker:pinDigests", // https://docs.renovatebot.com/presets-docker/#dockerpindigests
    "helpers:pinGitHubActionDigests" // https://docs.renovatebot.com/upgrade-best-practices/#extends-helperspingithubactiondigests
  ],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "groupName": "unified",
      "matchPackageNames": [
        "unified",
        "rehype-autolink-headings",
        "rehype-parse",
        "rehype-pretty-code",
        "rehype-raw",
        "rehype-react",
        "rehype-slug",
        "remark-gfm",
        "remark-parse",
        "remark-rehype",
        "shikiji",
        "shikiji-transformers"
      ]
    },
    {
      "groupName": "test",
      "matchPackageNames": [
        "@axe-core/playwright",
        "@playwright/test",
        "mcr.microsoft.com/playwright",
        "lost-pixel",
        "lost-pixel/lost-pixel",
        "msw",
        "vitest"
      ],
      // テストが通れば自動マージで良い
      "automerge": true
    },
    {
      "groupName": "tools",
      "matchPackageNames": [
        "@tsconfig/strictest",
        "dependency-cruiser",
        "eslint",
        "typescript",
        "pnpm",
        "npm-run-all2",
        "peter-evans/find-comment",
        "peter-evans/create-or-update-comment",
        "actions/upload-artifact",
        "actions/checkout",
        "mh4gf/dependency-cruiser-report-action",
        "@markuplint/jsx-parser",
        "@markuplint/ml-config",
        "@markuplint/react-spec",
        "markuplint",
        "@biomejs/biome",
        "node",
        "scaffdog"
      ],
      // 本番影響がないのでCIが通れば自動マージで良い
      "automerge": true
    },
    // group:definitelyTyped にautomergeを追加 https://docs.renovatebot.com/presets-group/#groupdefinitelytyped
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": ["@types/"],
      // tscが通れば自動マージで良い
      "automerge": true
    },
    {
      "groupName": "vrt",
      "matchPackageNames": [
        "tailwindcss",
        "@tailwindcss/typography",
        "postcss",
        "zod",
        "lucide-react",
        "@radix-ui/react-dialog"
      ],
      // VRTが通れば自動マージで良い
      "automerge": true
    }
  ]
}
